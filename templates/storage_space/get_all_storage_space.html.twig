{% extends 'base.html.twig' %}

{% block title %}Tous les espaces de stockage{% endblock %}

{% block body %}

<div class="container">
    <h1>Tous les espaces de stockage</h1>

    {% if app.user %}
        <p><a href="{{ path('storage_space_add' ) }}" >Ajouter un espace de stockage</a></p>
    {% else %}
    {% endif %}
    <section>
        <article>
            {% for storageSpace in storageSpaces %}

                <ul>
                    <a href="{{ path('storage_space_one', { 'id' : storageSpace.id } ) }}">
                    
                        <div>
                            {# <img src= "{{ asset('/images/products/' ~ storageSpace.image) }}" alt="" > #}
                        </div>

                        <li> {{ storageSpace.title }} </li>
                        <li> {{ storageSpace.description }} </li>
                        <li> 
                            <span> {{ storageSpace.adresse }}  </span> 
                            <span> {{ storageSpace.postalCode }} </span> 
                            <span> {{ storageSpace.city }} </span>
                        </li>
                        <li> {{ storageSpace.type }} </li>
                        <li> {{ storageSpace.space }} m2</li>
                        <li> {{ storageSpace.price }} € / mois</li>
                        <li>Créer le : {{ storageSpace.dateCreatedAt | date('d/m/Y H:i') }} </li>
                    </a>
                </ul>

            {% endfor %}
        </article>
    </section>
</div>
{% endblock %}
