{% extends "base.html.twig" %}

{% block title 'Modifier un espace de stockage' %}

{% block body %}
<div class="container">

    <h1>Modifier un espace de stockage</h1>

    <div class="container_form">

        {{ form_start(formStorageSpace, { 'attr' : { 'class' : 'form' }} ) }}

            <div class="div_form">

                <label for="inputTitle" class="form_label">Titre : </label>

                <div>
                    {{ form_widget(formStorageSpace.title, {attr : {class : 'form_input' }} ) }}
                </div>
                
                <small class="error_input_small">{{ form_errors(formStorageSpace.title) }} </small>

            </div>

            <div class="div_form">

                <label for="inputDescription" class="form_label">Description : </label>

                <div>
                    {{ form_widget(formStorageSpace.description, {attr : {class : 'form_input' }} ) }}
                </div>
                
                <small class="error_input_small">{{ form_errors(formStorageSpace.description) }} </small>

            </div>

            <div class="div_form">

                <label for="inputAdresse" class="form_label">{{ form_label(formStorageSpace.adresse) }}</label>

                <div>
                    {{ form_widget(formStorageSpace.adresse, {attr : {class : 'form_input' }} ) }}
                </div>
                
                <small class="error_input_small">{{ form_errors(formStorageSpace.adresse) }} </small>
            </div>

            <div class="div_form">

                <span>
                    
                    <label for="inputPostalCode" class="form_label">Code postale : </label>

                    {# <div> #}
                        {{ form_widget(formStorageSpace.postalCode, {attr : {class : 'form_input' }} ) }}
                    {# </div> #}
                    
                    <small class="error_input_small">{{ form_errors(formStorageSpace.postalCode) }} </small>
                </span>

                <span>

                    <label for="inputPostalCode" class="form_label">Ville : </label>

                    {# <div> #}
                        {{ form_widget(formStorageSpace.city, {attr : {class : 'form_input' }} ) }}
                    {# </div> #}
                    
                    <small class="error_input_small">{{ form_errors(formStorageSpace.city) }} </small>
                </span>
            </div>

            <div class="div_form">

                <label for="inputType" class="form_label">Type d'espace : </label>

                <div>
                    {{ form_widget(formStorageSpace.category, {attr : {class : 'form_input' }} ) }}
                </div>
                
                <small class="error_input_small">{{ form_errors(formStorageSpace.category) }} </small>

            </div>

            <div class="div_form">

                <label for="inputSpace" class="form_label">Espace en m2 : </label>

                <div>
                    {{ form_widget(formStorageSpace.space, {attr : {class : 'form_input' }} ) }}
                </div>
                
                <small class="error_input_small">{{ form_errors(formStorageSpace.space) }} </small>
            </div>

            <div class="div_form">

                <label for="inputPrice" class="form_label">Prix en euros par jours : </label>

                <div>
                    {{ form_widget(formStorageSpace.priceByDays, {attr : {class : 'form_input' }} ) }}
                </div>
                
                <small class="error_input_small">{{ form_errors(formStorageSpace.priceByDays) }} </small>
            </div>

            <div class="div_form">
                <label for="inputImage" class="form_label">Photo de l'espace de stockage (Facultatif)</label>

                <div>
                    {{ form_widget(formStorageSpace.imageFile, {attr : {class : 'form_input'} } ) }}
                </div>

                <small class="error_input_small">{{ form_errors(formStorageSpace.imageFile) }}</small>
            </div>

            <button type="submit" class="btn">Modifier</button>

        {{ form_end(formStorageSpace) }}
    </div>
</div>
{% endblock body %}